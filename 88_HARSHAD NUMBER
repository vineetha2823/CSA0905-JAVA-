import java.util.*;
class Harshad
{
public static void main(String args[])
{
Scanner s=new Scanner(System.in);
System.out.print("Enter number: ");
int n=s.nextInt();
int n1=n;
int sum=0,r;
while(n>0)
{
r=n%10;
sum=sum+r;
n=n/10;
}
if(n1%sum==0)
{
System.out.print("Harshad Number");
}
else
{
System.out.print("Not a Harshad Number");
}
}
}
